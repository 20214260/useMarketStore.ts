import { useEffect, useState } from "react";
import { useMarketStore } from "./hooks/useMarketStore";
import { startEngine, stopEngine } from "./engine/marketEngine";
import ChartPanel from "./components/ChartPanel";
import TickerCard from "./components/TickerCard";
import AiReportBox from "./components/AiReportBox";

export default function App() {
  const { assets } = useMarketStore();
  const tickers = Object.values(assets);
  const [focus, setFocus] = useState(tickers[0]);

  useEffect(() => {
    startEngine();
    return () => stopEngine();
  }, []);

  useEffect(() => {
    setFocus(tickers[0]);
  }, [assets]);

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-100 via-sky-100 to-purple-100 p-8">
      <h1 className="text-3xl font-bold text-center text-indigo-700 mb-8 drop-shadow-sm">
        AI Stock Simulator ðŸ“ˆ
      </h1>

      <div className="grid grid-cols-3 gap-6">
        <div className="col-span-2 space-y-4">
          {tickers.map((a) => (
            <div key={a.key} onClick={() => setFocus(a)}>
              <TickerCard a={a} />
              <ChartPanel label={a.name} data={a.history} />
            </div>
          ))}
        </div>

        <div>
          <AiReportBox focus={focus.name || "Unnamed Asset"} />

        </div>
      </div>
    </div>
  );
}
